<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Lost_No_Interest</fullName>
    <active>true</active>
    <description>Requires users to complete &quot;Why Not Interested?&quot; field</description>
    <errorConditionFormula>AND(ISPICKVAL(StageName, &quot;Lost - No Interest&quot;),
   ISBLANK( Why_Not_Interested__c ))</errorConditionFormula>
    <errorDisplayField>Why_Not_Interested__c</errorDisplayField>
    <errorMessage>Please explain why the Distributor/Contractor is not interested</errorMessage>
</ValidationRule>
