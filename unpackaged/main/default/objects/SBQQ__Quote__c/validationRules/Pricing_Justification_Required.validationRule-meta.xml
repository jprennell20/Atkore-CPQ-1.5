<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Pricing_Justification_Required</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
   NOT (ISPICKVAL( SBQQ__Status__c , &quot;Draft&quot;)),
    LEN(Pricing_Justification__c) = 0)</errorConditionFormula>
    <errorMessage>Must enter Pricing Justification before submitting for approval</errorMessage>
</ValidationRule>
